@model Connect4.Models.LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

@section Styles {
    <link href="~/shared/sign-in.css" rel="stylesheet" />
}

<main class="form-signin d-flex justify-content-center align-items-center vh-100 bg-body-tertiary">
    <form asp-action="Index" method="post">
        <h1 class="h3 mb-3 fw-normal">Ingreso al Juego</h1>

        <div class="form-floating mb-3">
            <input asp-for="Cedula" class="form-control" placeholder="Cédula" />
            <label asp-for="Cedula">Cédula</label>
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Nombre" class="form-control" placeholder="Nombre de Usuario" />
            <label asp-for="Nombre">Nombre de Usuario</label>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <button class="btn btn-primary w-100 py-2" type="submit">Ingresar o Registrarse</button>

        <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2017–2025</p>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
