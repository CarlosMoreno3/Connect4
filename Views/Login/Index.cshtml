@model Connect4.Models.LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

@section Styles {
    <link href="~/shared/sign-in.css" rel="stylesheet" />
}

<main class="form-signin d-flex justify-content-center align-items-center vh-100 bg-body-tertiary">
    <form asp-action="Index" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating mb-3">
            <input asp-for="Correo" class="form-control" placeholder="name@example.com" />
            <label asp-for="Correo">Email address</label>
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Contrasena" type="password" class="form-control" placeholder="Password" />
            <label asp-for="Contrasena">Password</label>
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>

        <div class="form-check text-start mb-3">
            <input asp-for="Recordarme" class="form-check-input" />
            <label asp-for="Recordarme" class="form-check-label">Remember me</label>
        </div>

        <div class="mb-3 text-start">
            <span>¿No tienes una cuenta? <a asp-controller="Register" asp-action="Index">Regístrate ahora</a></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>

        <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2017–2025</p>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}