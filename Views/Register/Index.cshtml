@model Connect4.Models.RegisterModel

@{
    ViewData["Title"] = "Registro";
}

@section Styles {
    <style>
        .form-register {
            max-width: 400px;
            padding: 2rem;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }

        .centered-wrapper {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

<div class="centered-wrapper">
    <main class="form-register">
        <form asp-action="Index" asp-controller="Register" method="post">
            @Html.AntiForgeryToken()

            <h1 class="h3 mb-3 fw-normal text-center">Create an account</h1>

            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="John" />
                <label asp-for="Nombre">First Name</label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Apellido" class="form-control" placeholder="Doe" />
                <label asp-for="Apellido">Last Name</label>
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Correo" class="form-control" placeholder="name@example.com" />
                <label asp-for="Correo">Email address</label>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Contrasena" class="form-control" type="password" placeholder="Password" />
                <label asp-for="Contrasena">Password</label>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmarContrasena" class="form-control" type="password" placeholder="Repeat Password" />
                <label asp-for="ConfirmarContrasena">Confirm Password</label>
                <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Register</button>

            <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2017â€“2025</p>
        </form>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}