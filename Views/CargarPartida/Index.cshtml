@model List<Connect4.Models.Partida>

@{
    ViewData["Title"] = "Cargar Partida";
}

<h2>Cargar Partida</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Jugador 1</th>
            <th>Jugador 2</th>
            <th>Turno</th>
            <th>Ganador</th>
            <th>Fecha de Creaci√≥n</th>
            <th>Cargar</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var partida in Model)
    {
        <tr>
            <td>@(partida.Jugador1 != null ? partida.Jugador1.Nombre + " " + partida.Jugador1.Apellido : "Desconocido")</td>
            <td>@(partida.Jugador2 != null ? partida.Jugador2.Nombre + " " + partida.Jugador2.Apellido : "Desconocido")</td>
            <td>
                @(partida.TurnoActual == 1
                    ? partida.Jugador1?.Nombre + " " + partida.Jugador1?.Apellido
                    : partida.TurnoActual == 2
                        ? partida.Jugador2?.Nombre + " " + partida.Jugador2?.Apellido
                        : "Desconocido")
            </td>
            <td>
                @{
                    string ganador = "Sin ganador";
                    if (partida.Resultado == "jugador1")
                    {
                        ganador = partida.Jugador1?.Nombre + " " + partida.Jugador1?.Apellido;
                    }
                    else if (partida.Resultado == "jugador2")
                    {
                        ganador = partida.Jugador2?.Nombre + " " + partida.Jugador2?.Apellido;
                    }
                    else if (partida.Resultado == "empate")
                    {
                        ganador = "Empate";
                    }
                }
                @ganador
            </td>
            <td>@partida.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                @if (string.IsNullOrEmpty(partida.Resultado))
                {
                    <a asp-action="Continuar" asp-route-id="@partida.Id" class="btn btn-primary">Cargar</a>
                }
                else
                {
                    <button class="btn btn-secondary" disabled>Finalizada</button>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
